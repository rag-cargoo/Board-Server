<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.boardserver.mapper.CategoryMapper">

    <insert id="register" parameterType="com.example.boardserver.dto.CategoryDTO">
        INSERT INTO categories (id, name)
        VALUES (#{id}, #{name})
    </insert>

    <update id="update" parameterType="com.example.boardserver.dto.CategoryDTO">
        UPDATE categories
        SET name = #{name}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM categories WHERE id = #{id}
    </delete>

</mapper>
